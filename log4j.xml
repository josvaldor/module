<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
    <appender name="Console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyyMMddHHmmss}:%-5p:[%t]:%m%n" />
        </layout>
    </appender>
    <appender name="RollingFile" class="org.apache.log4j.rolling.RollingFileAppender">
    	<param name="append" value="true"/>
    	<param name="threshold" value="debug"/>
		<param name="immediateFlush" value="true"/>
    	<rollingPolicy name="File" class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
      		<param name="FileNamePattern" value="module/log/module-%d{yyyyMMddHH}.log.gz"/>
      		<param name="ActiveFileName" value="module/log/module.log"/>
    	</rollingPolicy>
    	<layout class="org.apache.log4j.PatternLayout">
      		<param name="ConversionPattern" value="%d{yyyyMMddHHmmss}:%-5p:[%t]:%m%n"/>
    	</layout>
  	</appender>
	<appender name="Syslog" class="org.apache.log4j.net.SyslogAppender">
	      <param name="Facility" value="USER"/>
		  <param name="SyslogHost" value="localhost"/>
		  <param name="Threshold" value="INFO"/>
		  <layout class="org.apache.log4j.PatternLayout">
		    <param name="ConversionPattern" value="%d{yyyyMMddHHmmss}:%-5p:[%t]:%m%n"/>
		  </layout>
	</appender>
	<appender name="JDBC" class="org.apache.log4j.jdbcplus.JDBCAppender">
	   <param name="url" value="jdbc:mysql://localhost:3306/*?autoReconnect=true"/>
	   <param name="username" value="*"/>
	   <param name="password" value="*"/>
	   <param name="sql" value="INSERT INTO Log (date,level,thread,message,moduleIdentification) VALUES ('@TIMESTAMP@','@PRIO@','@THREAD@','@MSG@','*')"/>
	</appender>
	<logger name="org.apache.cayenne.access.QueryLogger"> <level value="WARN"/></logger>
    <root>
        <level value="debug" />
        <appender-ref ref="Console"/>
        <appender-ref ref="RollingFile"/>
<!--         <appender-ref ref="Syslog"/> -->
<!--         <appender-ref ref="JDBC"/> -->
    </root>
</log4j:configuration>